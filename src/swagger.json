{
    "openapi": "3.0.3",
    "info": {
        "title": "Produtos Eletronicos",
        "description": "API Rest de e-commerce (produtos eletronicos)",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/produtos": {
            "get": {
                "descrption": "Produtos Eletronicos",
                "summary": "Lista de produtos",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/produtos"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/produtos/{id}": {
            "get": {
                "descrption": "Lista produto por id",
                "parameters": [
                    {
                        "name": "id",
                           "in": "path",
                           "description": "parametro id",
                           "required": true
                        }
                ],
                "responses": {
                    "200": {
                        
                        "description": "Sucesso",
                        "content": {
                            "app/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/produtos"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/produto": {
            "post": {
                "summary": "Cadastra um produto",
                "descrption": "Cadastra novo produto",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/produto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Sucesso",
                        "content": {}
                    }
                }
            }
        },
        "/atualizaProduto/{id}": {
            "put": {
                "summary": "Atualizar produto pelo Id",
                "descrption": "Atualizar produto pelo Id",
     
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/produto"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Sucesso",
                        "content": {}
                    }
                }
            }
        },
        "/deleteProduto/{id}": {
            "delete": {
                "summary": "Deletar produtos",
                "description": "Deletar",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Produto deletado com Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/produto"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "produtos": {
                "properties": {
                "id": {
                    "type": "number"
                },
                "name": {
                    "type": "string",
                    "example": "Noteboock Dell G15"
                },
                "marca": {
                    "type": "string",
                    "example": "samsung"
                },
                "price": {
                    "type": "number",
                    "example": "3900"
                }
            }
            },
            "produtosPorId": {
                "type":"object",
               "properties": {
                "id": {
                    "type": "number"
                },
                "name": {
