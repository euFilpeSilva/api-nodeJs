{
    "openapi": "3.0.3",
    "info": {
        "title": "Produtos Eletronicos",
        "description": "API Rest de e-commerce (produtos eletronicos)",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/produtos": {
            "get": {
                "descrption": "Produtos Eletronicos",
                "summary": "Lista de produtos",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/produtos"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/produtosPorId/{id}": {
            "descrption": "Lista produto por id",
            "get": {
                "parameters": [
                    {
                        "id": "id",
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "description": "Lista de produto",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/produtosPorId"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/criarProduto": {
            "post": {
                "summary": "Cadastra um produto",
                "descrption": "Cadastra novo produto",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/produtos"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Sucesso",
                        "content": {}
                    }
                }
            }
        },
    "/atualizaProduto/{id}": {
        "descrption": "Atualizar produto pelo Id",
        "put": {
            "descrption": "Atualizar produto pelo Id",
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Produto": {
                                    "type": "object",
                                    "properties": {
                                        "codigo": {
                                            "type": "string",
                                            "example": "Notebook"
                                        },
                                        "preco": {
                                            "type": "number",
                                            "example": "1235.50"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "description": "Atualiza produto",
            "responses": {
                "204": {
                    "description": "Sucesso",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/atualizarProduto"
                            }
                        }
                    }
                }
            }
        }
    },
    "/deleteProduto/{id}": {
        "descrption": "Deletar produtos",
        "delete": {
            "parameters": [
                {
                    "id": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                }
            ],
            "description": "Deletar",
            "responses": {
                "202": {
                    "description": "Sucesso",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/deleteProduto"
                            }
                        }
                    }
                }
            }
        }
    }
},
