{
    "openapi": "3.0.3",
    "info": {
        "title": "Produtos Eletronicos",
        "description": "API Rest de e-commerce (produtos eletronicos)",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api-docs"
        }
    ],
    "paths": {
        "/produtos": {
            "get": {
                "descrption": "Produtos Eletronicos",
                "summary": "Lista de produtos",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                "type": "array",
                                "items":{
                                    "$ref": "#/components/schemas/produtos"
                                    }
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/produtosPorId/{id}": {
            "get": {
                "descrption": "Lista produto por id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "parametro id",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "app/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/produtos"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/criar": {
            "post": {
                "summary": "Cadastra um produto",
                "descrption": "Cadastra novo produto",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/produtos"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Sucesso",
                        "content": {}
                    }
                }
            }
        },

        "/editar/{id}": {
            "put": {
                "summary": "Atualizar produto pelo Id",
                "descrption": "Atualizar produto pelo Id",

                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/produtos"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Sucesso",
                        "content": {}
                    }
                }
            }
        },

        "/remover/{id}": {
            "delete": {
                "summary": "Deletar produtos",
                "description": "Deletar",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Produto deletado com Sucesso",
                        "404": {
                                "description": "NÃ£o Encontrado"
                            }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "produtos": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "example": 2
                    },
                    "name": {
                        "type": "string",
                        "example": "Noteboock Dell G15"
                    },
                    "marca": {
                        "type": "string",
                        "example": "samsung"
                    },
                    "price": {
                        "type": "number",
                        "example": "3900"
                    }
                }
            }
        }
    }
}